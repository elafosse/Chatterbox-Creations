<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header>
      <%- include('../partials/header'); %>
    </header>

    <main>
      <div class="container">
        <h1><%= (game) ? game : 'xxxxx' %></h1>
        <h3><%= (room_code) ? room_code : 'xxxxx' %></h3>
      </div>
      <div class="container">
        <form action="<%= (path) ? path : 'xxxxx' %>" class="form" method="post">
          <button name="code" value="<%= room_code %>" class="btn btn-primary float-right">Start Game</button>
        </form>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>