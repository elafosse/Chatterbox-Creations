<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <style>
    body {
      background-color: #0C1562; 
      color: #ffffff;
      font-family: 'Arial', sans-serif;
    }
    
    .header, .footer {
      background-color: #0C1562; 
      padding: 10px 0;
      text-align: center;
    }
    
    .main {
      text-align: center;
    }

    h3 {
    text-align: center;
    color: #e96f1d; 
    margin-top: 20px;
    font-weight: bold;
    }

    h1 {
    text-align: center;
    color: #e96f1d; 
    margin-top: 20px;
    font-weight: bold;
    }

    h4 {
    text-align: center;
    color: #03b91b; 
    margin-top: 20px;
    font-weight: bold;
    }
  </style>

  <body class="container">
    <main>
        <h3>Player Answer:</h3>
        <h1><%= (data.Player) ? data.Player : 'xxxxx' %></h1>
        <h3>Correct Answer:</h3>
        <h4><%= (data.Correct) ? data.Correct : 'xxxxx' %></h4>
        <div class="container" hidden>
          <a id="form_button" href="/leaderboard" class="btn btn-primary float-right"></a>
        </div>
    </main>
  </body>

  <script>
    function pressButton() {
      document.getElementById("form_button").click();
    }

    const myTimeout = setTimeout(pressButton, 3000);
  </script>
