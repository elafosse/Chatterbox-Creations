<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>

  <body class="container">
    <main>
        <h3>Player Answer:</h3>
        <h1><%= (data.Player) ? data.Player : 'xxxxx' %></h1>
        <h3>Correct Answer:</h3>
        <h1><%= (data.Correct) ? data.Correct : 'xxxxx' %></h1>
        <div class="container" hidden>
          <form action="/leaderboard" class="form" method="post">
            <button id="form_button" class="btn btn-primary float-right"></button>
          </form>
        </div>
    </main>
  </body>

  <script>
    function pressButton() {
      document.getElementById("form_button").click();
    }

    const myTimeout = setTimeout(pressButton, 5000);
  </script>
</html>