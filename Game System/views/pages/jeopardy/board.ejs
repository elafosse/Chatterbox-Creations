<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>

  <style>
    body {
      background-color: #0C1562; 
      color: #ffffff;
      font-family: 'Arial', sans-serif;
    }
    
    .header, .footer {
      background-color: #0C1562; 
      padding: 10px 0;
      text-align: center;
    }
    
    .main {
      text-align: center;
    }
    .container {
      padding: 20px;
    }
    
    .form {
      text-align: center;
    }

    h3 {
    text-align: center;
    color: #e96f1d; 
    margin-top: 20px;
    font-weight: bold;
    }

    /* For the Board */
    .table {
    margin: auto;
    width: 80%; 
    background-color: #0A0A23; 
    border-collapse: collapse; 
    }

    .table th, .table td {
    border: 2px solid #e96f1d; 
    text-align: center;
    color: white; 
    font-weight: bold;
    padding: 20px;
    font-size: 1.2em; 
    }

    /* Jeopardy category headers */
    .table thead th {
    background-color: #e96f1d; 
    color: #0A0A23; 
    padding: 15px 0;
    }

    /* Styling for each value cell */
    .table tbody td {
    background-color: #090949; 
    cursor: pointer; 
    }
  </style>

  <body class="container">
    <main>
        <h3>Jeopardy!</h3>
        <div class="container">
            <table class="table" id="jeopardyTable">
                <thead>
                  <tr>
                    <th scope="col">MUSIC</th>
                    <th scope="col">ANIMALS</th>
                    <th scope="col">SPORTS</th>
                    <th scope="col">HISTORY</th>
                    <th scope="col">MOVIES</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i = 1; i < 6; i++) {%>
                    <tr>
                      <% for(let [key, value] of data) {%>
                        <% if (value.includes("$" + i + "00.00")) { %>
                            <td><%= "$" + i + "00" %></td>
                          <% } else { %>
                            <td>XXXX</td>
                        <% } %>
                      <% } %>
                    </tr>
                  <% } %>
                </tbody>
              </table>
        </div>
        <div class="container" hidden>
          <form action="/jeopardy" class="form" method="post">
            <button id="form_button" class="btn btn-primary float-right"></button>
          </form>
        </div>
    </main>
  </body>

  <script>
    function pressButton() {
      document.getElementById("form_button").click();
    }

    const myTimeout = setTimeout(pressButton, 1000);
  </script>
</html>